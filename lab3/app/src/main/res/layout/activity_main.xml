<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/download" android:layout_weight="1"
            android:onClick="download"
            />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="delete"
            android:text="delete" />


        <Button
            android:text="view"
            android:layout_width="wrap_content"
            android:onClick="VIEW"
            android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"/>
        <Button
            android:text="Range"
            android:layout_width="wrap_content"
            android:onClick="RANGE"
            android:layout_height="wrap_content" android:id="@+id/button4" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>